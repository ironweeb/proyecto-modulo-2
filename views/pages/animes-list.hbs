          <p>Episodes: {{episodes}}</p>
          <p>Status: {{status}}</p>
          {{!-- <iframe src="{{trailer.embed_url}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen="" title="video" style="width: 50%; height: 450px;"></iframe>  --}}
