<section class="container">
  <h1>Animes</h1>
  <div class="d-flex justify-content-end">
    <span>Ordenar por:</span>
    <ul>
      <li><a href="/animes/list/?order=score">A - Z</a></li>
    </ul>
  </div>
  <hr />

  <div class="row">

    {{#each animes}}
      <div class="col-md-2">
        <article class="character">
          <h2>{{name}} <small>#{{mal_id}}</small></h2>
          <hr />
          <a href="/animes/{{_id}}"><img
              src="{{images.jpg.image_url}}"
              alt=""
            /></a>
          <p><strong>Title:</strong> {{title}}</p>
          <p>Episodes: {{episodes}}</p>
          <p>Status: {{status}}</p>
          {{!-- <iframe src="{{trailer.embed_url}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen="" title="video" style="width: 50%; height: 450px;"></iframe>  --}}
          {{! <div class="btn-group" style="width: 100%"> }}
        </article>
      </div>
    {{/each}}

    <br />
    <br />
    <div class="d-flex justify-content-center">
      <ul class="list-unstyled d-flex raw">
