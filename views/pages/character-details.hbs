{{#with character}}
  <h1>{{name}}</h1>
  <div class="d-flex">
    <img src="{{images.jpg.image_url}}" alt="Picture of {{name}}">
    <h3>{{about}}</h3>
  </div>
  <h3>Favorites: {{favorites}}</h3>

  {{#if ../canEdit}}
    <a href="/characters/{{_id}}/edit" class="btn btn-outline-dark btn-sm">Edit Character ✏️</a>
  {{/if}}

  {{#if ../canDelete}}
    <form action="/characters/{{_id}}/delete" method="post">
      <button type="submit" class="delete-button">🗑️</button>
    </form>
  {{/if}}
{{/with}}
