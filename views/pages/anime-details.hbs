{{#with anime}}
  <h1>{{title}}</h1>
  <div class="d-flex wrap">
    <img src="{{images.jpg.image_url}}" alt="Trailer of {{title}}">
    <h3>{{synopsis}}</h3>
  </div>
  <h3>Episodios: {{episodes}}</h3>
  <h3>Género: {{genres.0.name}}</h3>
  <h3>Score: {{score}}</h3>

  {{#if ../canEdit}}
    <a href="/animes/{{_id}}/edit" class="btn btn-outline-dark btn-sm">Editar anime ✏️</a>
  {{/if}}

  {{#if ../canDelete}}
    <form action="/animes/{{_id}}/delete" method="post">
      <button type="submit" class="delete-button">🗑️</button>
    </form>
  {{/if}}
  <a href="/animes/list" class="back-link">VOLVER</a>
{{/with}}
