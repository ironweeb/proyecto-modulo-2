<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Editar character</h1>
      <hr />

      <form action="/characters/{{character._id}}/edit" method="POST">

        <div class="mb-3 row">
          <div class="col">
            <label for="nameInput" class="form-label">Nombre:</label>
            <input
              type="text"
              value="{{character.name}}"
              class="form-control"
              name="name"
            />
            <div class="form-text">Requerido.</div>
          </div>
        </div>

        <div class="mb-3 row">
          <div class="col">
            <label for="nameKanjiInput" class="form-label">Nombre Kanji:</label>
            <input
              type="text"
              value="{{character.name_kanji}}"
              class="form-control"
              name="name_kanji"
            />
          </div>
        </div>

        {{!-- <div class="mb-3 row">
          <div class="col">
            <label for="nicknamesInput" class="form-label">Sobrenombres:</label>
            <input
              type="text"
              value="{{#each character.nicknames}}{{this}}, {{/each}}"
              class="form-control"
              name="nicknames"
            />
          </div>
        </div> --}}

        <div class="mb-3 row">
          <div class="col">
            <label for="favoritesInput" class="form-label">Favoritos:</label>
            <input
              type="number"
              value="{{character.favorites}}"
              class="form-control"
              name="favorites"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="images" class="form-label">URL de la imagen:</label>
          <input
            type="url"
            value="{{character.images.jpg.image_url}}"
            class="form-control"
            name="images"
          />
          <div class="form-text">Actualiza la URL a la imagen que desees.</div>
        </div>

        <div class="mb-3">
          <label for="aboutInput" class="form-label">Acerca de:</label>
          <textarea
            class="form-control"
            rows="3"
            name="about"
          >{{character.about}}</textarea>
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-dark block">Actualizar personaje</button>
        </div>

        {{#if errorMessage}}
          <div id="errorMessage">
            <p>{{errorMessage}}</p>
          </div>
        {{/if}}

      </form>

    </div>
  </div>

</div>