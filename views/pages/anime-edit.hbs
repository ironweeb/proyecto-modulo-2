<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Editar Anime</h1>
      <hr />

      <form action="/animes/{{anime._id}}/edit" method="POST">

        <div class="mb-3 row">
          <div class="col">
            <label for="emailInput" class="form-label">Title:</label>
            <input
              type="text"
              value="{{anime.title}}"
              class="form-control"
              name="title"
            />
            <div class="form-text">Requerido.</div>
          </div>

        </div>

        <div class="mb-3">
          <label for="episodes" class="form-label">Episodios:</label>
          <input
            type="number"
            value="{{anime.episodes}}"
            class="form-control"
            name="episodes"
          />
        </div>
        <div class="mb-3">
          <label for="score" class="form-label">Score:</label>
          <input
            type="number"
            value="{{anime.score}}"
            class="form-control"
            name="score"
          />
        </div>
        <div class="mb-3">
          <label for="genre" class="form-label">GÃ©nero:</label>
          <input
            type="text"
            value="{{anime.genre}}"
            class="form-control"
            name="array[]"
          />
        </div>

        <div class="mb-3">
          <label for="images" class="form-label">Imagen:</label>
          <input
            type="url"
            value="{{anime.images.jpg.image_url}}"
            class="form-control"
            name="images"
          />
          <div class="form-text">Actualiza la URL a la imagen que desees.</div>
        </div>

        <div class="mb-3">
          <label for="descriptionInput" class="form-label">Sinopsis:</label>
          <textarea
            class="form-control"
            rows="3"
            name="synopsis"
          >{{anime.synopsis}}</textarea>
        </div>

        <div class="mb-3">
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-dark block">Actualizar anime</button>
        </div>

        {{#if errorMessage}}
          <div id="errorMessage">
            <p>{{errorMessage}}</p>
          </div>
        {{/if}}

      </form>

    </div>
  </div>

</div>