<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  {{#each animes}}
    <div class="col">
      <article class="character card">
        <h2 class="card-title"><small>#{{mal_id}}</small></h2>
        <hr />
        <a href="/animes/{{_id}}">
          <img src="{{images.jpg.image_url}}" class="card-img-top" alt="" />
        </a>
        <div class="card-body">
          <h5 class="card-title"><strong>{{title}}</strong></h5>
          <p class="card-text">Score: {{score}}</p>
          <p class="card-text">Episodes: {{episodes}}</p>
          <p class="card-text">Status: {{status}}</p>
        </div>
        <form
          action="/users/my-anime-list/{{_id}}"
          method="POST"
          class="card-footer"
        >
          <button type="submit" class="btn btn-primary">AÃ±adir a mi lista</button>
        </form>
      </article>
    </div>
  {{/each}}
</div>