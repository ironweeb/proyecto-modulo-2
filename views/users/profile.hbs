{{#with profile}}

<h1 class="profile-title">Perfil de {{username}}</h1>

  <p class="username">Nombre de usuario: {{username}}</p>
  <p class="email">Email: {{email}}</p>
  <p class="profile-img-label">Imagen de perfil:</p>
  <img class="profile-img" src="{{profileImg}}" alt="Imagen de perfil" />
  <p class="description">Descripción: {{description}}</p>
  
{{#if ../canEdit}}
  <a class="edit-link" href="/users/{{_id}}/edit">Edit</a>
{{/if}}
{{#if ../canDelete}}
  <form class="delete-form" action="/users/{{_id}}/delete" method="post">
    <button class="delete-button" type="submit">🗑️</button>
  </form>
{{/if}}

<a class="anime-list-link" href="/users/my-anime-list">MY ANIME LIST</a>

{{/with}}
